<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_login">
	<layout_stack name="login_widgets">
		<layout_panel name="login">
			<text name="username_text">
        Benutzername:
			</text>
			<combo_box label="" name="username_combo" tool_tip="Bei der Registrierung gewählter Benutzername wie „berndschmidt12“ oder „Liebe Sonne“"/>
			<text name="password_text">
        Kennwort:
			</text>
			<line_editor label="" name="password_edit"/>
			<check_box label="Mir speichern" name="remember_name"/>
			<check_box label="Kennwort speichern" name="remember_password"/>
			<button label="Anmelden" name="connect_btn"/>
			<text name="start_location_text">
        Beginnen bei:
			</text>
			<combo_box label="" name="start_location_combo" tool_tip="">
				<combo_box.item label="Mein letzten Standort" name="MyLastLocation"/>
				<combo_box.item label="Zu Hause" name="MyHome"/>
				<combo_box.item label="&lt;Regionsnamen eingeben&gt;" name="Typeregionname"/>
			</combo_box>
			<combo_box label="" name="server_combo" tool_tip=""/>
			<button label="" name="add_grid_btn"/>
			<button label="Grid auswählen" name="select_grids_btn"/>
		</layout_panel>
		<layout_panel name="links">
			<text name="create_new_account_text">
        Registrieren
			</text>
		</layout_panel>
	</layout_stack>
</panel>
