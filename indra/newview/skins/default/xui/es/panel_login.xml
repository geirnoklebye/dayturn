<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel name="panel_login">
	<layout_stack name="login_widgets">
		<layout_panel name="login">
			<text name="username_text">
        Nombre de usuario:
			</text>
			<combo_box label="" name="username_combo" tool_tip="El nombre de usuario que elegiste al registrarte, como bobsmith12 o Steller Sunshine"/>
			<text name="password_text">
        Contraseña:
			</text>
			<line_editor label="" name="password_edit"/>
			<check_box label="Recuérdame" name="remember_name"/>
			<check_box label="Contraseña de registro" name="remember_password"/>
			<button label="Iniciar sesión" name="connect_btn"/>
			<text name="start_location_text">
        Mis lugares favoritos:
			</text>
			<combo_box label="" name="start_location_combo" tool_tip="">
