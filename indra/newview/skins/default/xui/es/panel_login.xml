				<combo_box.item label="Mi Base" name="MyHome"/>
				<combo_box.item label="&lt;Escriba el nombre de la región&gt;" name="Typeregionname"/>
			</combo_box>
			<combo_box label="" name="server_combo" tool_tip=""/>
			<button label="" name="add_grid_btn"/>
			<button label="Gestor de cuadrícula" name="select_grids_btn"/>
		</layout_panel>
		<layout_panel name="links">
			<text name="create_new_account_text">
        Regístrate
			</text>
		</layout_panel>
	</layout_stack>
